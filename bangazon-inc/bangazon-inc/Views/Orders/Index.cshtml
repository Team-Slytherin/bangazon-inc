@model IEnumerable<bangazon_inc.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Order Id
        </th>
        <th>
            Active Status
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderActive)
        </td>
        <td>
            @Html.ActionLink("Details", "Order", "OrderDetail", new { id=item.OrderId }, null)
             |
            @if (item.OrderActive == "1")
            {
                <text>Current Cart</text>
            }
        </td>
    </tr>
}

</table>
