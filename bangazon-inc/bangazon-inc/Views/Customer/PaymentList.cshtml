@model IEnumerable<bangazon_inc.Models.Payment>

@{
    ViewBag.Title = "PaymentList";
}

<h2>Payments</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PaymentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentAccountNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PaymentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaymentAccountNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PaymentId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PaymentId })
        </td>
    </tr>
}

</table>
