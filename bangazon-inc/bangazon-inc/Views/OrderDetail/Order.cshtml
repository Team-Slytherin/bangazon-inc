@model IEnumerable<bangazon_inc.Models.OrderDetail>

@{
    ViewBag.Title = "Order";
}

<h2>Order</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Image)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Image)
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("All Order List", "Index", "Orders", null, null) |
    @Html.ActionLink("Continue Shopping", "All", "Products", null, null) |
    @Html.ActionLink("Checkout", "Index", "Home", null, null)
</p>
